{% extends "bases/base.html.twig" %} 

{% block body %}
	<style>
		.insription-form-html{
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			padding: 60px;
			height: 55vh;
		}

		.inscription-form{
			width: 50%;
			background-color: #fff;
			padding: 20px;
			border: 1px solid #ccc;
			border-radius: 5px;
			box-shadow: 0 0 10px rgba(0,0,0,0.3);
		}

		.inscription-form h3{
			font-size: 20px;
			font-weight: bold;
			margin-bottom: 10px;
			border-bottom: 1px solid #ccc;
			padding-bottom: 15px;
		}

		form{
			padding: 20px;
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 20px;
		}

		.form-control{
			box-sizing: border-box;
			width: 60%;
			padding: 10px;
			border: 1px solid #ccc;
			border-radius: 5px;
			box-shadow: 0 0 10px rgba(0,0,0,0.5);
			outline: none;
		}

		.btn-inscrire{
			width: 60%;
			padding: 10px;
			border: 1px solid #ccc;
			border-radius: 5px;
			box-shadow: 0 0 10px rgba(0,0,0,0.5);
			outline: none;
			background-color: #000;
			color: #fff;
			font-weight: bold;
			cursor: pointer;
		}

		.btn-inscrire:hover{
			background-color: #000;
			color: #fff;
		}

		.inscription-form-footer{
			margin-top: 20px;
		}

		.inscription-form-footer a{
			color: #007bff;
			text-decoration: none;
		}

		.alert-danger{
			color: red;
			font-weight: bold;
		}

		li{
			list-style: none;
		}
	</style>

	<title>Inscription</title>

	<main class="insription-form-html">
		<div class="inscription-form">
			<h3>Inscription</h3>

			{{ form_start(form) }}

				{{ form_widget(form.UserName, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur','autocomplete':'off'}}) }}
				{{ form_widget(form.UserMail, {'attr': {'class': 'form-control', 'placeholder': 'Email','autocomplete':'off'}}) }}
				{{ form_widget(form.UserPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
				
				{{ form_widget(form.createAccount, {'label' : 'Créer un compte', 'attr' : {'class' : 'btn-inscrire'}}) }}
			
				{% if form.UserPassword.vars.errors %}
    				<div class="alert alert-danger">{{ form_errors(form) }}</div>
				{% endif %}
			{{ form_end(form) }}
		</div>

		<div class="inscription-form-footer">
			<span>Vous avez déjà un compte ?</span> <a href="{{ path('connection') }}">Connectez-vous</a>
		</div>

	</main>

{% endblock %}
