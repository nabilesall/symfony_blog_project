{% extends "bases/base.html.twig" %} 

{% block body %}
	<style>
		.insription-form-html{
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			padding: 20px;
			height: 65vh;
		}

		.inscription-form{
			width: 50%;
			background-color: #fff;
			padding: 20px;
			border: 1px solid #ccc;
			border-radius: 5px;
			box-shadow: 0 0 10px rgba(0,0,0,0.3);
		}

		form{
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 20px;
		}

		.form-control{
			width: 40%;
			padding: 10px;
			border: 1px solid #ccc;
			border-radius: 5px;
			box-shadow: 0 0 10px rgba(0,0,0,0.5);
			outline: none;
		}

		.btn-inscrire{
			width: 40%;
			padding: 10px;
			border: 1px solid #ccc;
			border-radius: 5px;
			box-shadow: 0 0 10px rgba(0,0,0,0.5);
			outline: none;
			background-color: #000;
			color: #fff;
			font-weight: bold;
			cursor: pointer;
		}

		.btn-inscrire:hover{
			background-color: #000;
			color: #fff;
		}

		.inscription-form-footer{
			margin-top: 20px;
		}

		.inscription-form-footer a{
			color: #007bff;
			text-decoration: none;
		}
	</style>

	<title>Inscription</title>

	<main class="insription-form-html">
		<div class="inscription-form">
			<h3>Inscription</h3>

			{{ form_start(form) }}

				{{ form_widget(form.UserName, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}}) }}
				{{ form_widget(form.UserMail, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
				{{ form_widget(form.UserPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
				
				{{ form_widget(form.createAccount, {'label' : 'Créer un compte', 'attr' : {'class' : 'btn-inscrire'}}) }}
			
			{{ form_end(form) }}
		</div>

		<div class="inscription-form-footer">
			<p>Vous avez déjà un compte ? <a href="{{ path('connection') }}">Connectez-vous</a></p>
		</div>

	</main>

{% endblock %}
