{% extends "bases/base.html.twig" %}

{% block title %}Les Catégories{% endblock %}

{% block body %}

	<main class="admin-category-index-html">
		<div class="categories">
			<div class="header-categories">
				<h3>Categories</h3>
				<a href="/admin/category/create">Créer une nouvelle catégorie</a>
			</div>

			{% for category in categories %}
				<div class="single-category">
					<h3>{{category.name}}</h3>
					<a href="/admin/category/{{category.id}}">Voir la catégorie</a>
				</div>
			{% endfor %}

		</div>
	</main>

{% endblock %}
