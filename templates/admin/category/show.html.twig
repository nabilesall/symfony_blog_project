{% extends "bases/base.html.twig" %}

{% block title %}cat√©gorie{% endblock %}

{% block body %}

	<main class="category-show-html">
		<div class="single-category-container">

			{{category.name}}
			
			<div class="navigation">
				<a href="{{ path('admin.category.index') }}">back to list</a>
				<a href="{{ path('admin.category.edit', {'id': category.id}) }}">Modifier</a>
				<a href="{{ path('admin.category.remove', {'id': category.id}) }}">Supprimer</a>
			</div>
		</div>

		<div class="posts">
			{% for post in posts %}
				<div class="single-post">
					<div class="post-header">
						<h2>{{ post.title }}</h2>
						<p class="date-publication">le {{ post.publishedAt|date('d/m/Y') }}</p>
					</div>
					<div class="separator"></div>
					<p class="post-content">{{ post.content }}</p>
					<a href="{{ path('admin.post.show', {'id': post.id}) }}">Lire la suite</a>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}
