{% extends "bases/base.html.twig" %}

{% block body %}
	<style>
		.admin-category-show-html{
			display: flex;
			justify-content: center;
			align-items: center;
			height: 80vh;
		}

		.single-category-container{
			display: flex;
			flex-direction: column;
			justify-content: space-around;
			align-items: center;
			width: 60%;
			height: 20%;
			background-color: #fff;
			border-radius: 10px;
			box-shadow: 0 0 10px 0 rgba(0,0,0,0.5);
		}

		.navigation{
			display: flex;
			justify-content: space-around;
			align-items: center;
			width: 100%;
			height: 20%;
		}

		.navigation a{
			text-decoration: none;
			color: #000;
			font-size: 1.2rem;
			font-weight: bold;
			border: 1px solid #000;
			border-radius: 10px;
			padding: 10px;
			transition: all 0.3s ease;
		}

		.navigation a:hover{
			color: #fff;
			background-color: #000;
		}
	</style>

	<title>category - show</title>

	<main class="admin-category-show-html">
		<div class="single-category-container">

			{{category.name}}
			
			<div class="navigation">
				<a href="{{ path('admin.category.index') }}">back to list</a>
				<a href="{{ path('admin.category.edit', {'id': category.id}) }}">Modifier</a>
				<a href="{{ path('admin.category.remove', {'id': category.id}) }}">Supprimer</a>
			</div>
		</div>
	</main>
{% endblock %}
