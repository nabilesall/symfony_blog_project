{% extends "bases/base.html.twig" %}

{% block title %}Post - Cr√©er{% endblock %}

{% block body %}

	<main class="admin-post-create-html">
		<div class="ecrire-article">
			<h3>Ecrire un article</h3>

			{{form_start(form)}}

				{{form_widget(form.title, {'attr': {'placeholder': 'Titre de l\'article', 'class': 'form-item-title','autocomplete': 'off'}})}}
				{{form_widget(form.content, {'attr': {'placeholder': 'Contenu de l\'article', 'class': 'form-item-content', 'autocomplete': 'off'}})}}
				{{form_row(form.categories, {'attr': {'class': 'form-item-categories'}})}}
				{{form_widget(form.publish, {'label': 'Publier l\'article', 'attr': {'class': 'form-item-publish'}})}}
			
			{{form_end(form)}}
		</div>
	</main>

{% endblock %}
