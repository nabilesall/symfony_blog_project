{% extends "bases/base.html.twig" %}

{% block body %}
	<style>

		.admin-post-index-html {
			display: flex;
			justify-content: center;
			align-items: center;
		}

		.header-posts {
			width: 100%;
			font: 18px / 1.5 sans-serif;
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 20px 0 20px 0;
		}
		
		.header-posts h3 {
			margin: 0;
			padding: 0;
			font-size: 1.5em;
			font-weight: bold;
		}

		.posts {
			display: flex;
			width: 60%;
			flex-direction: column;
		}

		.post-header {
			display: flex;
			justify-content: space-between;
		}

		.date-publication {
			font-size: 0.8em;
			color: #aaa;
			margin: 0;
    		align-self: center;
		}

		.single-post {
			margin-bottom: 1em;			
			background-color : #fff;
			border-radius : 5px;
			padding: 10px;
			padding-bottom: 20px;
			box-shadow: 0 0 10px 0 rgba(0,0,0,0.5);

		}

		.single-post .post-content{
			text-align: justify;
		}

		.single-post a, .header-posts a {
			text-decoration: none;
			color: #000;
			font-weight: bold;
			transition: all 0.3s ease;
			border: 1px solid;
			padding: 10px;
			border-radius: 10px;
		}

		.single-post a:hover, .header-posts a:hover {
			background-color: #000;
			color: #fff;
		}

		.separator {
			width: 100%;
			height: 1px;
			background-color: #eee;
		}
	</style>

	<title>Posts</title>

	<main class="admin-post-index-html">
		<div class="posts">
			<div class="header-posts">
				<h3>posts</h3>
				<a href="/admin/post/create">Cr√©er un post</a>
			</div>

			{% for post in posts %}
				<div class="single-post">
					<div class="post-header">
						<h2>{{ post.title }}</h2>
						<p class="date-publication">le {{ post.publishedAt|date('d/m/Y') }}</p>
					</div>
					<div class="separator"></div>
					<p class="post-content">{{ post.content }}</p>
					<a href="/admin/post/{{ post.id }}">Lire la suite</a>
				</div>
			{% endfor %}

			<div class="single-post">
