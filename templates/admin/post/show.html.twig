{% extends "bases/base.html.twig" %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<title>Hello PostController!</title>

	<div class="example-wrapper">
	</div>

	<div class="example-wrapper">

		{{post.title}} <br>
		{{post.content}} <br>

		{{ form_start(form) }}
			{{form_errors(form)}}

			{{form_row(form.content)}}
			{{form_widget(form.comment)}}
	
		{{ form_end(form) }}

	</div>
{% endblock %}
