{% extends "bases/base.html.twig" %}

{% block title %}Afficher cat√©gories{% endblock %}

{% block body %}

	<main class="category-show-html">
		<div class="single-category-container">
			{{category.name}}
		</div>

		<div class="posts">
			{% for post in posts %}
				<div class="single-post">
					<div class="post-header">
						<h2>{{ post.title }}</h2>
						<p class="date-publication">le {{ post.publishedAt|date('d/m/Y') }}</p>
					</div>
					<div class="separator"></div>
					<p class="post-content">{{ post.content }}</p>
					<a href=" {{ path('user.post.show', {'id': post.id}) }} ">Lire la suite</a>
				</div>
			{% endfor %}
		</div>

	</main>
{% endblock %}
